.verify-email {
  text-align: center;
  height: 100%;
  background: $intro-screens-bg;
	margin: 0 auto;
  h1 {
    text-transform: uppercase;
    color: $grey-lighter;
    font-size: $intro-screens-header-font-size;
    margin: 2vh auto 6vh;
    letter-spacing: 3px;
  }
	p {
		font-size: 12px;
		text-align: center;
		line-height: 1.5em;
    padding: 0 20px;
		strong {
			font-weight: bold;
		}
		&.or {
			font-weight: bold;
			color: $yellow;
			text-transform: uppercase;
			font-size: 1.2em;
			margin: 3vh auto;
		}
	}


  .graphic_check {
    margin: 12vh auto 4vh;
  }

  .graphic_resend {
    margin: 16vh auto 4vh;
  }

  .footer {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    border-top: 1px solid lighten($intro-screens-grad-light, 5%);
  }

}
